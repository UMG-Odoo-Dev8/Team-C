<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <!--school action-->
   <record id="exam_record_action" model="ir.actions.act_window">
      <field name="name">School Appointment</field>
      <field name="res_model">appointment.model</field>
      <field name="context" />
      <!--default context-->
      <field name="view_mode">tree,form</field>
   </record>
   <record id="school_appointment_form" model="ir.ui.view">
      <field name="name">school_appointment.view.form</field>
      <field name="model">appointment.model</field>
      <field name="arch" type="xml">
         <form string="">
            <sheet>
               <!--priority widget-->
               <div class="oe_title">
                  <h1>
                     <field name="priority" widget="priority" class="mr-3" />
                  </h1>
               </div>
               <group>
                  <group>
                     <field name="subject_id" />
                  </group>
                  <group>
                     <field name="teacher" />
                     <!-- <field name="teacher_id" domain="[('role','=','teacher'),('status','=','current')]" /> -->
                  </group>
               </group>
               <footer />
               <!--notebook-->
               <notebook>
                  <page string="Student Info:">
                     <field name="school_exam_line">
                        <tree editable="bottom">
                           <field name="student_id" domain="[('role','=','student')]" />
                           <field name="score" />
                           <field name="exam_id" invisible="1" />
                           <field name="status" />
                        </tree>
                     </field>
                  </page>
               </notebook>
            </sheet>
         </form>
      </field>
   </record>
   <record id="school_appointment_tree" model="ir.ui.view">
      <field name="name">school_appointment.view.tree</field>
      <field name="model">appointment.model</field>
      <field name="arch" type="xml">
         <tree string="">
            <field name="subject_id" />
            <field name="teacher" />
            <field name="school_exam_line" />
            <!-- <field name="student_id" /> -->
            <!-- <field name="score" />  -->
         </tree>
      </field>
   </record>
</odoo>
