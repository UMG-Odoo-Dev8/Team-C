<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="attendance_view_tree" model="ir.ui.view">
        <field name="name">attendance.view.tree</field>
        <field name="model">attendence.record</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="sec_name" />
                <field name="date" />
                <field name="teacher_id" />
                <field name="roll_call_ids"/>
            </tree>
        </field>
    </record>
    <record id="attendence_record_view_form" model="ir.ui.view">
        <field name="name">Attendence Record</field>
        <field name="model">attendence.record</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="sec_name" />
                        <field name="date" />
                        <field name="teacher_id" />
                        
                    </group>
                    <notebook>
                  <page string="Attendence Record:">
                     <field name="roll_call_ids">
                        <tree editable="bottom">
                           <field name="roll_no" />
                           <field name="student_id" invisible="1"/>
                           <field name="student_name" />
                           <field name="morning" />
                           <!-- <field name="remark" /> -->
                           <field name="afternoon" />
                           <field name="leave" attrs="{'invisible':[('morning','=',True),('afternoon','=',True)]}"/>
                           <field name="state" />
                           <field name="roll_call_id" invisible="1" />
                        </tree>
                     </field>
                  </page>
               </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="attendence_record_action" model="ir.actions.act_window">
        <field name="name">Attendence Record</field>
        <field name="res_model">attendence.record</field>
        <field name="view_mode">tree,form</field>
        
            
        
    </record>

</odoo>
