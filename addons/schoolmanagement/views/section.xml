<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="school_subject_form" model="ir.ui.view">
      <field name="name">school_subject.view.form</field>
      <field name="model">subject.model</field>
      <field name="arch" type="xml">
         <form string="">
            <sheet>
               
               <group>
                  <field name="section_name" />
                  <field name="teacher_id" domain="[('role','=','teacher')]" />
                  <field name="teacher" widget="many2many_tags" domain="[('role','=','teacher')]" />
               </group>
               <notebook>
                  <page string="Student Info:">
                     <field name="student_ids">
                        <tree editable="bottom">
                           <field name="student_id" domain="[('role','=','student')]" />
                           <field name="roll_no" />
                           <field name="section_id" invisible="1" />
                        </tree>
                     </field>
                  </page>
               </notebook>
            </sheet>
            
         </form>
      </field>
   </record>
   <record id="school_subject_tree" model="ir.ui.view">
      <field name="name">school_subject.view.tree</field>
      <field name="model">subject.model</field>
      <field name="arch" type="xml">
         <tree string="">
            <field name="section_name" />
            <!-- <field name="state" /> -->
            <field name="teacher_id" />
            <field name="teacher" />
            <field name="student_ids" />
         </tree>
      </field>
   </record>
   <!--school action-->
   <record id="school_subject_action" model="ir.actions.act_window">
      <field name="name">School Subject</field>
      <field name="res_model">subject.model</field>
      <field name="context" />
      <!--default context-->
      <field name="view_mode">tree,form</field>
   </record>
</odoo>
