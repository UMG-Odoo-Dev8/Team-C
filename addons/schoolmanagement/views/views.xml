<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <!--form view in odoo-->
   <record id="model_school_view_form" model="ir.ui.view">
      <field name="name">model_name.view.form</field>
      <field name="model">school.model</field>
      <field name="arch" type="xml">
         <form string="">
            <header>
               <field name="role" widget="statusbar" nolabel="1" options="{'clickable':'1'}" statusbar_visible="student,teacher" />
            </header>
            <sheet>
               <!-- <div class="oe_title">
                  <h1>
                     <field name="priority" widget="priority" class="mr-3" />
                  </h1>
               </div> -->
               <group>
                  <group>
                     <!-- <field name="role" decoration-success="role=='student'" /> -->
                     <field name="name" />
                     <field name="roll_no" attrs="{'invisible' : [('role', '=', 'teacher')]}" />
                     <field name="gender" widget="radio" options="{'horizontal':True}"/>
                     <!-- <field name="gender" widget="radio" options="{'horizontal': true}"/> -->
                     <field name="date_of_birth" />
                     <field name="age" />
                     <field name="father_name" />
                  </group>
                  <group>
                     <field name="country" />
                     <field name="degree" attrs="{'invisible' : [('role', '=', 'student')]}" />
                     <field name="address" />
                     <field name="ph_no" />
                     <field name="teacher_role" widget="radio" options="{'horizontal': true}" attrs="{'invisible' : [('role', '=', 'student')]}" />
                     <!-- <field name="active" />  -->
                  </group>
               </group>
            </sheet>
            <!--chatter-->
            <!-- <div class="oe_chatter">
               <field name="message_follower_ids" widget="base.group_user" />
               <field name="activity_ids" />
               <field name="message_ids" />
            </div> -->
         </form>
      </field>
   </record>
   <!--graph view in odoo-->
   <record id="school_view_graph" model="ir.ui.view">
      <field name="name">school.model.graph</field>
      <field name="model">school.model</field>
      <field name="arch" type="xml">
         <graph string="" type="bar">
            <field name="name" />
            <field name="role" />
            <field name="status" />
            <field name="country" />
            <field name="father_name" />
            
            <field name="degree" />
            <field name="degree" />
            <field name="date_of_birth" />
            <field name="ph_no" />
         </graph>
      </field>
   </record>
   <!--search-->
   <record id="school_view_search" model="ir.ui.view">
      <field name="name">model_name.view.search</field>
      <field name="model">school.model</field>
      <field name="arch" type="xml">
         <search>
            <field name="name" string="Name" filter_domain="['|',('name','ilike',self),('father_name','ilike',self),('mother_name','ilike',self)]" />
            <field name="role" />
            <field name="status" />
            <field name="country" />
            <field name="father_name" />
            
            <field name="degree" />
            <field name="date_of_birth" />
            <field name="ph_no" />
            <!--filter-->
            <filter name="filter_student" string="Student" domain="[('role','=','student')]" />
            <filter name="filter_teacher" string="Teacher" domain="[('role','=','teacher')]" />
            <separator />
            <filter name="filter_new" string="New" domain="[('status','=','new')]" />
            <!--Group BY-->
            <group expand="0" string="Group By">
               <filter string="Role" name="group_by_role" context="{'group_by':'role'}" />
               <filter string="Status" name="group_by_status" context="{'group_by':'status'}" />
            </group>
            <!--search panel-->
            <searchpanel>
               <field name="role" icon="fa-users" select="multi" enable_counters="1" />
               <field name="status" icon="fa-users" select="multi" enable_counters="1" />
            </searchpanel>
         </search>
      </field>
   </record>
   <!--School tree view in odoo-->
   <record id="school_view_tree" model="ir.ui.view">
      <field name="name">model_name.view.tree</field>
      <field name="model">school.model</field>
      <field name="arch" type="xml">
         <tree decoration-success="role=='student'" decoration-info="role=='teacher'" string="tree" multi_edit="1">
            <!--color for tree-->
            <!--multi edit-->
            <!--widget and decoration color-->
            <field name="role" decoration-success="role=='student'" decoration-info="role in ('teacher','in consulation')" widget="badge" />
            <field name="name" required="True" />
            <field name="roll_no" />
            <field name="gender" />
            <field name="date_of_birth" />
            <field name="age" />
            <field name="father_name" />
            <field name="country" />
            
            
            <field name="address" />
            <field name="ph_no" />
            <!-- <field name="teacher_role" /> -->
         </tree>
      </field>
   </record>
   <!--kaban view odoo-->
   <record id="model_name_view_kanban" model="ir.ui.view">
      <field name="name">school.midel.view.kanban</field>
      <field name="model">school.model</field>
      <field name="arch" type="xml">
         <kanban class="0_res_partner_kanban">
            <field name="name" />
            <field name="status" />
            <templates>
               <t t-name="kanban-box">
                  <div t-attf-class="oe_kanban_global_click">
                     <div class="oe_kanban_details">
                        <strong class="o_kanban_record_title">
                           <field name="name" />
                        </strong>
                        <div>
                           <field name="status" />
                        </div>
                        <div>
                           <field name="role" />
                        </div>
                        <div>
                           <field name="father_name" />
                        </div>
                        
                        <div>
                           <field name="degree" />
                        </div>
                        <div>
                           <field name="ph_no" />
                        </div>
                        <div>
                           <field name="date_of_birth" />
                        </div>
                     </div>
                  </div>
               </t>
            </templates>
         </kanban>
      </field>
   </record>
   <!--calendar view in odoo-->
   <record id="school_model_calendar" model="ir.ui.view">
      <field name="name">school.model.calendar</field>
      <field name="model">school.model</field>
      <field name="arch" type="xml">
         <calendar string="school calendar" date_start="date_of_birth" color="name">
            <field name="name" />
         </calendar>
      </field>
   </record>
   <!--pivot view in odoo-->
   <record id="school_model_pivot" model="ir.ui.view">
      <field name="name">school.model.pivot</field>
      <field name="model">school.model</field>
      <field name="arch" type="xml">
         <pivot string="school pivot" disable_linking="true" sample="1">
            <field name="name" string="Name" />
         </pivot>
      </field>
   </record>
